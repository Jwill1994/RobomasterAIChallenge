<launch>
  <node pkg="obstacle_detector" type="obstacle_detector" name="obstacle_detector" output="screen">
    <remap from="obstacles" to="obst"/>
    <param name="world_frame"     type="string" value="map"/>
    <param name="scanner_frame"   type="string" value="base_laser_link"/>
 
    <param name="use_scan"            type="bool" value="true"/>
    <param name="use_pcl"             type="bool" value="false"/>
    <param name="transform_to_world"  type="bool" value="true"/>
    <param name="use_split_and_merge" type="bool" value="false"/>

    <param name="min_group_points"    value="4"/>
    <param name="max_group_distance"  value="0.285"/>
    <param name="distance_proportion" value="0.006136"/>
    <param name="max_split_distance"  value="0.070"/>

    <param name="max_merge_separation" value="0.285"/>
    <param name="max_merge_spread"     value="0.150"/>
    <param name="max_circle_radius"    value="0.400"/>
    <param name="radius_enlargement"   value="0.050"/>

    <param name="max_scanner_range"    value="3.2"/>
    <param name="max_x_range"          value="2.0"/>
    <param name="min_x_range"          value="-2.0"/>
    <param name="max_y_range"          value="2.0"/>
    <param name="min_y_range"          value="-2.0"/>
  </node>

  <node pkg="lidar_detector" name="lidar_detector_node" type="lidar_detector_node"/>

</launch>
